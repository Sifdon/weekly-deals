<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue100</item>
        <item name="colorPrimaryDark">@color/blue120</item>
        <item name="colorAccent">@color/blue00</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolbarPsnTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/blue80</item>
        <item name="colorControlNormal">@color/white00</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextStyleRobotoMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleRobotoThin">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyleRobotoLight">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyleRobotoBold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
